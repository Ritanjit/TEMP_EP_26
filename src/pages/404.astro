---
// Prerender at build time (static error page)
export const prerender = true;

/**
 * 404 Page - 404.astro
 * 
 * Custom 404 error page for non-existing routes.
 * Astro automatically uses this for missing pages.
 */

import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist">
  
  <section class="error-page min-h-screen flex items-center justify-center px-4">
    <div class="text-center">
      <h1 class="text-8xl md:text-9xl font-bold gradient-text mb-4">404</h1>
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Page Not Found</h2>
      <p class="text-white/60 mb-8 max-w-md mx-auto">
        Oops! The page you're looking for doesn't exist or has been moved.
      </p>
      <a 
        href="/" 
        class="inline-block px-8 py-3 bg-[var(--color-primary)] rounded-full hover:bg-[var(--color-primary-dark)] transition"
      >
        Back to Home
      </a>
    </div>
  </section>

</BaseLayout>
