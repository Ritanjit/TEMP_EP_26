---
// Prerender at build time for CDN performance (static page with parallax hero)
export const prerender = true;

/**
 * Homepage - index.astro
 * 
 * HERO SECTION: Scroll-linked parallax with Euphuism branding
 * Uses Framer Motion for smooth animations on scroll.
 * 
 * Color Palette:
 * - Green: #2D3E10
 * - Beige: #EFE6C1
 * - Brown: #843535
 * - Dark Orange: #D03503
 * - Blue: #2663EC
 * - Light Pink: #F4A8B5
 * - Dark Pink: #FF5E90
 */

import LandingLayout from '@layouts/LandingLayout.astro';
import HeroParallax from '@components/react/hero/HeroParallax';
import AboutEventsParallax from '@components/react/sections/AboutEventsParallax';
import SponsorsSection from '@components/react/sponsors/SponsorsSection';
---

<LandingLayout title="Home" description="Welcome to GCU Euphuism 2026 - The Grand Annual Cultural Fest">
  
  <!-- 
    Parallax Hero Section
    =====================
    HeroParallax has height: 150vh for scroll-based animation.
    Features:
    - Parallax effects (trees moving, logo rising)
    - Sticky logo after scroll completes
  -->
  <HeroParallax client:load />

  <!-- 
    About + Key Events Parallax Section
    ===================================
    Features Aceternity-style scrolling parallax with:
    - About Euphuism 2026 header
    - 3 rows of Key Events cards with horizontal scroll animation
    - 3D perspective transforms (rotateX, rotateZ)
    - Hover effects showing event names
  -->
  <AboutEventsParallax client:load />

  <!-- 
    Sponsors Section
    ================
    Displays sponsor logos with gamusa background.
  -->
  <SponsorsSection client:load />

</LandingLayout>

