<style>
  /* Full Screen Hero Image Styles */
  .hero-container {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    overflow: hidden;
    /* Beige background as fallback (matches the image) */
    background-color: #EFE6C1;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    /* Beige background for letterboxing on extreme aspect ratios */
    background-color: #EFE6C1;
  }

  /* Responsive adjustments */
  
  /* Desktop - Large screens */
  @media (min-width: 1024px) {
    .hero-image {
      object-fit: contain;
    }
  }

  /* Tablet - Medium screens */
  @media (min-width: 768px) and (max-width: 1023px) {
    .hero-image {
      object-fit: contain;
    }
  }

  /* Mobile - Small screens */
  @media (max-width: 767px) {
    .hero-image {
      object-fit: contain;
      /* Ensure image is fully visible on mobile */
      max-width: 100%;
      max-height: 100%;
    }
  }

  /* Landscape mode on mobile */
  @media (max-width: 767px) and (orientation: landscape) {
    .hero-image {
      object-fit: contain;
    }
  }

  /* Portrait mode on mobile */
  @media (max-width: 767px) and (orientation: portrait) {
    .hero-image {
      object-fit: contain;
    }
  }

  /* Events Coming Soon Text Styles */
  .coming-soon-text {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    color: var(--euphuism-green);
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-align: center;
    padding: 0.75rem 1rem;
    /* Subtle background for better readability */
    background-color: rgba(239, 230, 193, 0.85);
    border-radius: 8px;
    /* Animation */
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  /* Responsive text size */
  @media (max-width: 767px) {
    .coming-soon-text {
      font-size: 1rem;
      padding: 0.5rem 1.25rem;
      bottom: 1.5rem;
      letter-spacing: 0.1em;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .coming-soon-text {
      font-size: 1.25rem;
      bottom: 1.75rem;
    }
  }
</style>
