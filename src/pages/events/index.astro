---
// Prerender at build time (static events listing)
export const prerender = true;

/**
 * All Events Page - events/index.astro
 * 
 * Displays all events with:
 * - Day-wise organization (Day 1, Day 2, Day 3)
 * - Category color coding (Music, Tech, Art, Academic, Fun)
 * - Parallax watermark and grain texture overlay
 * - GSAP scroll-triggered animations
 */

import LandingLayout from '@layouts/LandingLayout.astro';
import AllEventsPage from '@components/react/sections/AllEventsPage';
---

<LandingLayout title="All Events" description="Explore all events across three exciting days of Euphuism 2026" showPreloader={false}>
  
  <!-- AllEventsPage React Component with full interactivity -->
  <AllEventsPage client:load />

</LandingLayout>
